<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgProductCartItem"
                android:src="@drawable/ic_catalogbg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_weight=".75"


                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="8dp"

                >
                <TextView
                    android:id="@+id/tvProductTitleCartItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/app_name"
                    android:textAppearance="?attr/textAppearanceCaption"


                    />
                <TextView
                    android:id="@+id/tvProductPriceCartItem"
                    android:layout_below="@+id/tvProductTitleCartItem"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textStyle="bold"

                    android:textSize="12sp"
                    android:layout_alignParentStart="true"

                    />





            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout

            android:layout_weight=".75"

            android:id="@+id/tvQuantityCartItemContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            app:helperText="qty"


            app:boxCornerRadiusTopEnd="2dp"
            app:boxCornerRadiusTopStart="2dp"
            app:boxCornerRadiusBottomStart="2dp"
            app:boxCornerRadiusBottomEnd="2dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvQuantityCartItem"
                android:inputType="number"

                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


        </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQuantityCartItem"
                android:text="update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
