<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clCart"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"

    >
    <ImageView
        android:id="@+id/imgSwipeDelete"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/mi_delete"
        android:layout_marginStart="250dp"

        android:visibility="gone"
        android:layout_marginEnd="20dp"

        android:layout_marginBottom="1dp"
        android:layout_marginTop="5dp"
        />
<com.google.android.material.card.MaterialCardView

    android:id="@+id/mcvItem"
    android:layout_width="match_parent"
    android:layout_height="140dp"

    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"

    android:layout_marginBottom="1dp"
    android:layout_marginTop="5dp"

    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    app:cardElevation="10dp"
    app:strokeColor="@color/material_on_surface_stroke"
    app:strokeWidth="1dp"


    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/imgProductCartItem"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_catalogbg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_weight=".75"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="8dp"

                >
                <TextView
                    android:id="@+id/tvProductTitleCartItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/app_name"
                    android:textAppearance="?attr/textAppearanceCaption"


                    />
                <TextView
                    android:id="@+id/tvProductPriceCartItem"
                    android:layout_below="@+id/tvProductTitleCartItem"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textStyle="bold"

                    android:textSize="12sp"
                    android:layout_alignParentStart="true"

                    />

                <com.google.android.material.textfield.TextInputLayout



                    android:id="@+id/tvQuantityCartItemContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    app:helperText="qty"

                    android:layout_below="@+id/tvProductPriceCartItem"
                    app:boxCornerRadiusTopEnd="0dp"
                    app:boxCornerRadiusTopStart="0dp"
                    app:boxCornerRadiusBottomStart="0dp"
                    app:boxCornerRadiusBottomEnd="0dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvQuantityCartItem"
                        android:inputType="number"

                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButtonGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tvQuantityCartItemContainer"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUpdateQuantity"

                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/update_cart"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@android:color/holo_green_dark"

                        android:backgroundTint="@android:color/transparent"

                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"

                        />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeleteCartItem"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/baseline_delete_forever_24"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/red"

                        android:backgroundTint="@android:color/transparent"

                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"


                        />
                </com.google.android.material.button.MaterialButtonGroup>



            </RelativeLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>